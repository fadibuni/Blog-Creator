<%- include("partials/header.ejs") %>
<h1>Welcome to post creator!</h1>
<h2>You can, create, deleate, and edit posts on this website</h2>
<div class="new-post">
  <form action="/submit" method="POST">
    <p><label for="post">Type your new post here</label></p>
    <textarea id="post" name="post" rows="4"></textarea>
    <br />
    <input type="submit" value="Submit" />
  </form>
</div>
<% if (locals.posts) {%> <% for (let i = 0; i < posts.length; i++) { %>
<div class="post">
  <p><%= posts[i].content %></p>
  <form action="/delete-post/<%= posts[i].id %>" method="POST">
    <input type="submit" value="Delete" />
  </form>
  <form action="/edit/<%= posts[i].id %>" method="POST">
    <p>
      <label for="edit"
        >Fill this box here then click on edit to make changes to this
        post</label
      >
    </p>
    <textarea id="edit" name="edit" rows="4"></textarea>
    <input type="submit" value="Edit" />
  </form>
</div>
<% } }%>
